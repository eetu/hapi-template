{
  "name": "hapi-template",
  "version": "1.0.0",
  "description": "template for Hapi 17 with hapi-swagger",
  "license": "MIT",
  "main": "index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "start-dev": "env-cmd .env nodemon -L --watch dist/src dist/index.js",
    "migrate-db": "env-cmd .env knex migrate:latest",
    "build": "npm run build-ts",
    "test": "env-cmd .env.test jest",
    "watch-test": "env-cmd .env.test jest --watch",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "heroku-postbuild": "./tools/build.sh"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "boom": "^7.3.0",
    "good": "^8.0.1",
    "hapi": "^17.8.1",
    "hapi-swagger": "^9.3.0",
    "inert": "^5.1.2",
    "joi": "^13.1.2",
    "knex": "^0.14.4",
    "pg": "^7.7.1",
    "vision": "^5.4.4",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/hapi": "^17.8.2",
    "@types/jest": "^22.2.3",
    "@types/joi": "^13.6.3",
    "@types/knex": "^0.14.26",
    "@types/lodash": "^4.14.119",
    "@types/node": "^9.6.41",
    "@types/pg": "^7.4.11",
    "env-cmd": "^7.0.0",
    "jest": "^22.4.4",
    "nodemon": "^1.18.9",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "tslint": "^5.12.0",
    "typescript": "^2.9.2"
  }
}
